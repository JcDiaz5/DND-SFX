# Copy to .env and fill in your values.
# Required for sending verification emails (e.g. email change on profile).

# SMTP server (e.g. Gmail: smtp.gmail.com, Outlook: smtp-mail.outlook.com)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
# For Gmail with 2FA you must use an App Password: https://myaccount.google.com/apppasswords
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
# Sender shown in emails (optional; defaults to MAIL_USERNAME)
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Optional: use SSL on port 465 instead of TLS on 587 (e.g. some providers)
# MAIL_PORT=465
# MAIL_USE_SSL=true
# MAIL_USE_TLS=false
